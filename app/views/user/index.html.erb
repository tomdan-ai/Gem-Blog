<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
</head>
<body>
  <h1>User List</h1>

  <% @users.each do |user| %>
    <div class="Users-card">
      <img class="User-img" src="<%= user.photo %>" alt="User Image">
      <div class="user-inn">
        <h2><%= user.name %></h2>
        <p>Number Of Posts: <%= user.postsCounter %></p>
        <% if user_signed_in? && current_user == user %>
          <%= link_to 'View My Profile', user_path(user) %>
        <% else %>
          <%= link_to 'View Profile', user_path(user) %>
        <% end %>
      </div>
    </div>
  <% end %>
</body>
</html>
